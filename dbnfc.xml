<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gordey007.nfc.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:text="Список"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        android:textColor="@color/black"
        android:textSize="17dp"></TextView>

    <TextView
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="103dp"
        android:text=""
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:text="Серийный номер"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="17dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView3"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="17dp">
    </TextView>

    <Button
        android:id="@+id/btnUpd"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:text="Обновить"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        style="@style/Button"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        android:onClick="onMyButtonClick">
    </Button>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="Удалить"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Button"
        app:layout_constraintLeft_toRightOf="@+id/btnUpd"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.391">
    </Button>

    <EditText
        android:id="@+id/etID"
        android:inputType="phone"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="21dp"
        style="@style/Button"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="21dp"
        app:layout_constraintRight_toLeftOf="@+id/btnUpd"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        >
    </EditText>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:text="Добавить"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="152dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        style="@style/Button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.434">
    </Button>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:text="Очистить"
        android:layout_marginEnd="16dp"
        style="@style/Button"
        app:layout_constraintLeft_toRightOf="@+id/btnAdd"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        app:layout_constraintHorizontal_bias="0.818">
    </Button>

    <ScrollView
        android:id="@+id/scrollView3"
        style="@style/Button"
        android:layout_width="144dp"
        android:layout_height="199dp"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="245dp"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/listNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</android.support.constraint.ConstraintLayout>